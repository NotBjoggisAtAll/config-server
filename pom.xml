<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.0.0-M3</version>
    <relativePath/>
  </parent>

  <groupId>com.bjoggis</groupId>
  <artifactId>config-server-service</artifactId>
  <version>1.3-SNAPSHOT</version>
  <name>config-server</name>
  <description>Config server for Bjoggis Studios applications</description>

  <properties>
    <java.version>17</java.version>
    <spring-cloud.version>2022.0.0-M3</spring-cloud.version>
    <systemd-connector.version>1.3</systemd-connector.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-config-server</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.cloud</groupId>
      <artifactId>spring-cloud-starter-consul-discovery</artifactId>
    </dependency>
    <dependency>
      <groupId>com.bjoggis</groupId>
      <artifactId>systemd-connector</artifactId>
      <version>${systemd-connector.version}</version>
    </dependency>

    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-dependencies</artifactId>
        <version>${spring-cloud.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>3.0.0-M5</version>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!-- RPM PROFILE -->
    <profile>
      <id>rpmbuilder</id>
      <build>

        <!-- Enable Resource Filtering -->
        <resources>
          <resource>
            <directory>${project.basedir}/assets</directory>
            <filtering>true</filtering>
          </resource>
          <resource>
            <directory>src/main/resources</directory>
            <targetPath>${project.build.directory}/classes</targetPath>
            <filtering>true</filtering>
          </resource>
        </resources>
        <testResources>
          <testResource>
            <directory>src/test/resources</directory>
            <targetPath>${project.build.directory}/test-classes</targetPath>
            <filtering>true</filtering>
          </testResource>
        </testResources>

        <plugins>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <version>3.2.0</version>
            <executions>
              <execution>
                <id>filter-resources</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>resources</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <propertiesEncoding>UTF-8</propertiesEncoding>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <!-- Preserve Spring Boot Delimiters ('@') -->
              <useDefaultDelimiters>false</useDefaultDelimiters>
            </configuration>
          </plugin>

          <!-- Create RPM -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>
            <version>2.2.0</version>
            <executions>
              <execution>
                <id>attach-rpm</id>
                <goals>
                  <goal>attached-rpm</goal>
                </goals>
              </execution>
            </executions>
            <extensions>true</extensions>
            <configuration>
              <distribution>Bjoggis</distribution>
              <group>Application/Bjoggis</group>
              <packager>Bjoggis Studios</packager>
              <prefix>/usr/local</prefix>
              <needarch>true</needarch>
              <targetVendor>redhat</targetVendor>
              <targetOS>linux</targetOS>
              <mappings>
                <mapping>
                  <directory>/var/log/runner</directory>
                  <username>runner</username>
                  <groupname>runner</groupname>
                  <filemode>750</filemode>
                </mapping>
                <mapping>
                  <directory>/var/lib/runner</directory>
                  <username>runner</username>
                  <groupname>runner</groupname>
                  <filemode>750</filemode>
                </mapping>
                <mapping>
                  <directory>/etc/systemd/system</directory>
                  <directoryIncluded>false</directoryIncluded>
                  <username>root</username>
                  <groupname>root</groupname>
                  <filemode>644</filemode>
                  <sources>
                    <source>
                      <location>${project.build.directory}/config-server-service.service</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/runner/</directory>
                  <filemode>755</filemode>
                  <username>runner</username>
                  <groupname>runner</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/local/runner/config-server-service</directory>
                  <filemode>755</filemode>
                  <username>runner</username>
                  <groupname>runner</groupname>
                </mapping>
                <mapping>
                  <directory>/usr/local/runner/config-server-service</directory>
                  <directoryIncluded>false</directoryIncluded>
                  <username>runner</username>
                  <groupname>runner</groupname>
                  <filemode>755</filemode>
                  <sources>
                    <source>
                      <location>${project.build.directory}/${project.artifactId}-${project.version}.jar</location>
                    </source>
                  </sources>
                </mapping>
                <mapping>
                  <directory>/usr/local/runner/config-server-service</directory>
                  <directoryIncluded>false</directoryIncluded>
                  <username>runner</username>
                  <groupname>runner</groupname>
                  <filemode>664</filemode>
                  <sources>
                    <source>
                      <location>${project.build.directory}/config-server-service.conf</location>
                    </source>
                  </sources>
                </mapping>
              </mappings>
              <preinstallScriptlet>
                <scriptFile>scripts/preinstall</scriptFile>
                <fileEncoding>utf-8</fileEncoding>
              </preinstallScriptlet>
              <postinstallScriptlet>
                <scriptFile>scripts/postinstall</scriptFile>
                <fileEncoding>utf-8</fileEncoding>
              </postinstallScriptlet>
              <preremoveScriptlet>
                <scriptFile>scripts/preremove</scriptFile>
                <fileEncoding>utf-8</fileEncoding>
              </preremoveScriptlet>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>bjoggis-studios-releases</id>
      <url>https://pkgs.dev.azure.com/bjoggis-studios/bjoggis-mono/_packaging/bjoggis-studios-releases/maven/v1</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>spring-milestones</id>
      <name>Spring Milestones</name>
      <url>https://repo.spring.io/milestone</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>spring-milestones</id>
      <name>Spring Milestones</name>
      <url>https://repo.spring.io/milestone</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <distributionManagement>
    <repository>
      <id>bjoggis-studios-releases</id>
      <url>https://pkgs.dev.azure.com/bjoggis-studios/bjoggis-mono/_packaging/bjoggis-studios-releases/maven/v1</url>
    </repository>
    <snapshotRepository>
      <id>bjoggis-studios-only</id>
      <url>https://pkgs.dev.azure.com/bjoggis-studios/bjoggis-mono/_packaging/bjoggis-studios-only/maven/v1</url>
    </snapshotRepository>
  </distributionManagement>


</project>
